let currentRow = 0;
let currentLetter = 0;
const correctWord = "PIZZA"; // Например, слово для угадывания

function pressKey(letter) {
    if (currentLetter < 5) {
        const currentCell = document.getElementById(`row${currentRow + 1}`).children[currentLetter];
        currentCell.textContent = letter;
        currentLetter++;
    }
}

function deleteLetter() {
    if (currentLetter > 0) {
        currentLetter--;
        const currentCell = document.getElementById(`row${currentRow + 1}`).children[currentLetter];
        currentCell.textContent = "";
    }
}

function submitWord() {
    if (currentLetter === 5) {
        const word = getCurrentWord();
        checkWord(word);
    }
}

function getCurrentWord() {
    let word = "";
    const row = document.getElementById(`row${currentRow + 1}`);
    for (let i = 0; i < 5; i++) {
        word += row.children[i].textContent;
    }
    return word;
}

function checkWord(word) {
    const row = document.getElementById(`row${currentRow + 1}`);
    for (let i = 0; i < 5; i++) {
        const cell = row.children[i];
        if (word[i] === correctWord[i]) {
            cell.style.backgroundColor = "green";
        } else if (correctWord.includes(word[i])) {
            cell.style.backgroundColor = "yellow";
        } else {
            cell.style.backgroundColor = "gray";
        }
    }

    currentRow++;
    currentLetter = 0;

    if (word === correctWord) {
        alert("Вы выиграли!");
    } else if (currentRow === 6) {
        alert("Игра окончена! Правильное слово: " + correctWord);
    }
}
